<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSecondary">

    <CheckBox
        android:id="@+id/fatura_irsaliye_add_iskonto_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="iskonto"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fatura_irsaliye_add_recycler_products_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        app:tint="@color/white"
        android:src="@drawable/ic_products_and_services"
        app:layout_constraintStart_toEndOf="@id/fatura_irsaliye_add_iskonto_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/fatura_irsaliye_add_iskonto_checkbox"
        app:layout_constraintTop_toTopOf="@id/fatura_irsaliye_add_iskonto_checkbox"
        />


    <TextView
        android:id="@+id/fatura_irsaliye_add_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Ürün adı"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/fatura_irsaliye_add_iskonto_checkbox"
        app:layout_constraintStart_toEndOf="@id/fatura_irsaliye_add_recycler_products_icon"
        app:layout_constraintTop_toTopOf="@id/fatura_irsaliye_add_iskonto_checkbox" />

    <ImageView
        android:id="@+id/fatura_irsaliye_add_recycler_minus_button"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_minus2"
        app:layout_constraintBottom_toBottomOf="@id/fatura_irsaliye_add_product_name"
        app:layout_constraintEnd_toStartOf="@id/fatura_irsaliye_add_recycler_plus_button"
        app:layout_constraintTop_toTopOf="@id/fatura_irsaliye_add_product_name" />

    <ImageView
        android:id="@+id/fatura_irsaliye_add_recycler_plus_button"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_plus2"
        app:layout_constraintBottom_toBottomOf="@id/fatura_irsaliye_add_product_name"
        app:layout_constraintEnd_toStartOf="@id/fatura_irsaliye_add_recycler_amount_tv"
        app:layout_constraintTop_toTopOf="@id/fatura_irsaliye_add_product_name" />


    <TextView
        android:id="@+id/fatura_irsaliye_add_recycler_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="10"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/fatura_irsaliye_add_iskonto_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fatura_irsaliye_add_iskonto_checkbox" />

</androidx.constraintlayout.widget.ConstraintLayout>