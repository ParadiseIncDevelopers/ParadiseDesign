            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangular_borders_colored"
            android:text="@string/fragment_tabs_products_title"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            app:icon="@drawable/ic_products_and_services"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs_representative_mizan" />

        <Button
            android:id="@+id/tabs_representative_workers"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="22dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangular_borders_colored"
            android:text="@string/fragment_tabs_workers_title"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            app:icon="@drawable/ic_workers"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs_representative_products"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
