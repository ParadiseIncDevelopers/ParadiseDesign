<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tabs.TabsRepresentativeActivity">


        <Button
            android:id="@+id/tabs_representative_bank"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangular_borders_colored"
            android:text="@string/fragment_tabs_bank_title"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            app:icon="@drawable/ic_bank_kasa"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/tabs_representative_warehouse"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangular_borders_colored"
            android:text="@string/fragment_tabs_depo_depo_takibi"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            app:icon="@drawable/ic_warehouse_depo"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs_representative_bank" />


        <Button
            android:id="@+id/tabs_representative_esmm"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangular_borders_colored"
            android:text="@string/fragment_tabs_esmm_title"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            app:icon="@drawable/ic_money_esmm"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs_representative_warehouse" />


        <Button
            android:id="@+id/tabs_representative_fatura"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangular_borders_colored"
            android:text="@string/fragment_tabs_fatura_title"
