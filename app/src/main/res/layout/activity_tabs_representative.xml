            android:textColor="?attr/colorOnPrimary"
            app:icon="@drawable/ic_bill_fatura"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs_representative_esmm" />


        <Button
            android:id="@+id/tabs_representative_ithalat"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangular_borders_colored"
            android:text="@string/fragment_tabs_export_and_import_title"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            app:icon="@drawable/ic_export_ithalat"
            app:iconSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs_representative_fatura" />

        <Button
            android:id="@+id/tabs_representative_menkul"
