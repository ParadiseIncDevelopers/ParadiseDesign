<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tabs.bank.BankDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSecondary">

            <ImageView
                android:id="@+id/bank_details_image_company"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_apartment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/bank_details_name_of_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Şirket adı"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/bank_details_image_company"
                app:layout_constraintTop_toTopOf="@id/bank_details_image_company" />

            <TextView
                android:id="@+id/bank_details_tax_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Vergi numarası"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/bank_details_image_company"
                app:layout_constraintTop_toTopOf="@id/bank_details_image_company"
                app:layout_constraintBottom_toBottomOf="@id/bank_details_image_company"/>

            <TextView
                android:id="@+id/bank_details_mersis_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Mersis"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/bank_details_image_company"
                app:layout_constraintStart_toEndOf="@id/bank_details_image_company" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bank_detail_cash_button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:text="Cash"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        android:backgroundTint="?attr/colorSecondary"
        app:icon="@drawable/ic_money_back"
        app:iconSize="40dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bank_detail_cheques_received_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        android:text="Cheques received"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        android:backgroundTint="?attr/colorSecondary"
        app:icon="@drawable/ic_taxes_bill"
        android:textSize="18sp"
        app:iconSize="40dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bank_detail_cheques_given_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        android:text="Cheques given and payment order"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        android:backgroundTint="?attr/colorSecondary"
        app:icon="@drawable/ic_pay_money"
        android:textSize="18sp"
        app:iconSize="40dp" />

    <Button
        android:id="@+id/bank_detail_liquid_assets_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="14dp"
        app:cornerRadius="8dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Other liquid assets"
        android:textAllCaps="false"
        app:icon="@drawable/ic_bank_building_taxes"
        android:textSize="18sp"
        app:iconSize="40dp" />

</LinearLayout>