<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSecondary"
    android:layout_margin="4dp"
    android:padding="8dp">

    <ImageView android:id="@+id/factory_process_adder_recycler_imamge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_manufacturing_process_engineer"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/factory_process_adder_recycler_title"
        android:text="@string/recycler_products_factory_process_adder_title"
        android:layout_marginStart="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/factory_process_adder_recycler_imamge"
        app:layout_constraintBottom_toBottomOf="@id/factory_process_adder_recycler_imamge"
        app:layout_constraintTop_toTopOf="@id/factory_process_adder_recycler_imamge"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/factory_process_adder_recycler_card"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView android:id="@+id/factory_process_adder_recycler_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/white"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>