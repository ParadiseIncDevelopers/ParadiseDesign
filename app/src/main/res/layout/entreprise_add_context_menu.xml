<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/enteprise_add_manual_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rectangular_borders_colored"
        android:text="Manual"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_apartment"
        app:iconSize="40dp"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/enteprise_add_qrcode_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rectangular_borders_colored"
        android:text="QR-code"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_qr_code_scan"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enteprise_add_manual_button" />



</androidx.constraintlayout.widget.ConstraintLayout>