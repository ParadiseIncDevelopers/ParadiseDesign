<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tabs.products.ProductSelectTypeActivity">


    <Button
        android:id="@+id/product_select_type_ticari_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rectangular_borders_colored"
        android:text="Ticari ürünü"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_apartment"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/product_select_type_fabrika_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rectangular_borders_colored"
        android:text="Fabrika ürünü"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_factory"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_select_type_ticari_button" />


    <Button
        android:id="@+id/product_select_type_hizmet_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rectangular_borders_colored"
        android:text="Hizmet ürünü"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        app:icon="@drawable/ic_suitcase"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_select_type_fabrika_button" />





</androidx.constraintlayout.widget.ConstraintLayout>