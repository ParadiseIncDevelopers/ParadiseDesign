<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabs.fatura.irsaliye.FaturaIrsaliyeAddActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fatura_irsaliye_add_header_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/fatura_irsaliye_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün listesi"
            android:gravity="center"
            android:textColor="?attr/colorOnPrimary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fayuta_irsaliye_add_title_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_products_and_services"
            android:layout_marginStart="6dp"
            app:tint="?attr/colorOnPrimary"
            app:layout_constraintBottom_toBottomOf="@id/fatura_irsaliye_add_title"
            app:layout_constraintTop_toTopOf="@id/fatura_irsaliye_add_title"
            app:layout_constraintStart_toEndOf="@id/fatura_irsaliye_add_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fatura_irsaliye_add_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fatura_irsaliye_add_header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>