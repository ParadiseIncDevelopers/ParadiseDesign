<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterpriseProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".tabs.MenuTabFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#5c82a6"
            android:padding="20dp">


            <ImageView
                android:id="@+id/business_cancel_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_remove" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:layout_toLeftOf="@id/business_cancel_button"
                android:text="Hesabi kapat"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/company_image_profile_card_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/company_image_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_apartment" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/company_name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/company_image_profile_card_view"
                android:fontFamily="@font/roboto_regular"
                android:includeFontPadding="false"
                android:text="Company name"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/company_email_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_name_field"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/company_image_profile_card_view"
                android:includeFontPadding="false"
                android:text="company.email@mail.com"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#5c82a6"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_company_vergi_numarasi" />

                    <TextView
                        android:id="@+id/company_tax_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_bold"
                        android:includeFontPadding="false"
                        android:text="00905550737163"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mobile_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_tax_number"
                        android:layout_centerHorizontal="true"
                        android:includeFontPadding="false"
                        android:text="Vergi numarasi"
                        android:textSize="18sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#5c82a6"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_company_mersis" />

                    <TextView
                        android:id="@+id/company_mersis_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_bold"
                        android:includeFontPadding="false"
                        android:text="22087432468"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mersis_no_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_mersis_no"
                        android:layout_centerHorizontal="true"
                        android:includeFontPadding="false"
                        android:text="Mersis numarasi"
                        android:textSize="18sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rectangular_borders"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/company_type_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_company_enterprise" />

                <TextView
                    android:id="@+id/company_type_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_type_icon"
                    android:text="Sirket turu"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/company_type_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_type_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_type_icon"
                    android:text="Yazılım şirketi"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rectangular_borders"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/company_city_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_city" />

                <TextView
                    android:id="@+id/company_city_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_city_icon"
                    android:text="Sehir"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/company_city_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_city_title"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/company_city_icon"
                    android:text="Istanbul"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rectangular_borders"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/company_district_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_city" />

                <TextView
                    android:id="@+id/company_district_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_district_icon"
                    android:text="Ilce"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/company_district_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_district_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_district_icon"
                    android:text="Kucukcekmece"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rectangular_borders"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/company_tax_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_bank_building_taxes" />

                <TextView
                    android:id="@+id/company_tax_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_tax_icon"
                    android:text="Vergi dairesi"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/company_tax_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_tax_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_tax_icon"
                    android:text="Karesi Vergi Dairesi Mudurlugu"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rectangular_borders"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/company_address_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_location_on_24" />

                <TextView
                    android:id="@+id/company_address_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_address_icon"
                    android:text="Adres"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/company_addres_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_address_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_address_icon"
                    android:text="2. Sakarya Mahallesi, Uzun sokak, 42"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rectangular_borders"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/company_trade_register_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_taxes_bill" />

                <TextView
                    android:id="@+id/company_trade_register_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/company_trade_register_icon"
                    android:text="Ticaret sicil no"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/company_trade_register_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_trade_register_title"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/company_trade_register_icon"
                    android:text="1234567890"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rectangular_borders"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/company_password_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_company_password" />

                <TextView
                    android:id="@+id/company_password_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/company_password_icon"
                    android:text="Kurumsal şifre"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/company_password_label_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_password_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/company_password_icon"
                    android:inputType="textPassword"
                    android:text="Karesi Vergi Dairesi Mudurlugu"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />


            </RelativeLayout>


            <Button
                android:id="@+id/update_details_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Bilgileri değiştir"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/company_change_password_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Parolayi degistir"
                    android:textAllCaps="false"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>